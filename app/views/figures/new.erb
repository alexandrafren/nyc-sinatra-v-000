<form action="/figures" method="POST">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name"><br>
  <br>
  <label>Titles</label>
  <br>
  <% Title.all.each do |title| %>
    <%=title.name%>
    <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="title[name]">
    <br>
  <% end %>

  <p>Create new title:</p>
  <input type="text" name="title[name]" id="new_title">
  <br>
  
  <label>Landmarks</label>
  <br>
  <% Landmark.all.each do |mark| %>
    <%= mark.name %>
    <input id="<%mark.name%>" type="checkbox" name="figure[landmark_ids][]" value="<%=mark.id%>">
    <br>
  <% end %>

  <p>Create New Landmark:</p>
  <label>Name</label>
  <input type="text" name="landmark[name]">
  <label>Year</label>
  <input type="text" name="landmark[year]">

  <input type="submit" value="Create New Figure">
</form>
